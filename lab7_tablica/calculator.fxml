<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rpn_calc.CalculatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Заголовок -->
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="IT-Награждение: Затраты на поощрение победителей" />

    <!-- Кнопка загрузки файла -->
    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="loadButton" onAction="#loadCongratulatorsFromFile" text="Загрузить IT-компании из файла"
                style="-fx-font-weight: bold; -fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

    <!-- Секция IT-компаний (уменьшена с прокруткой) -->
    <VBox spacing="10.0" style="-fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 10;">
        <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e;" text="Выберите IT-компании (можно несколько):" />
        <ScrollPane prefHeight="120.0" prefWidth="450.0"
                    style="-fx-border-color: #95a5a6; -fx-border-radius: 3;">
            <VBox fx:id="congratulatorBox" spacing="8.0" />
        </ScrollPane>
    </VBox>

    <!-- Секция технологических подарков (увеличена) -->
    <VBox spacing="10.0" style="-fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 10;">
        <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e;" text="Выберите технологические подарки и укажите количество:" />
        <ScrollPane prefHeight="300.0" prefWidth="450.0"
                    style="-fx-border-color: #95a5a6; -fx-border-radius: 3;">
            <VBox fx:id="giftBox" spacing="8.0" />
        </ScrollPane>
    </VBox>

    <!-- Секция дополнительных опций -->
    <HBox spacing="30.0" alignment="CENTER_LEFT">
        <VBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e;" text="IT-мероприятие:" />
            <CheckBox fx:id="concertYes" text="Да (5000 руб)"
                      style="-fx-text-fill: #2c3e50;" />
        </VBox>

        <VBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e;" text="Статус клиента:" />
            <CheckBox fx:id="loyalCheckBox" text="Постоянный партнер (10% скидка)"
                      style="-fx-text-fill: #2c3e50;" />
        </VBox>
    </HBox>

    <!-- Итоговая стоимость -->
    <HBox spacing="10.0" alignment="CENTER"
          style="-fx-background-color: #ecf0f1; -fx-background-radius: 5; -fx-padding: 15;">
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
               text="Итоговая стоимость:" />
        <Label fx:id="totalLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"
               text="0.00 руб" />
    </HBox>

    <!-- Состав заказа -->
    <VBox spacing="8.0" VBox.vgrow="ALWAYS">
        <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e;" text="Детали заказа:" />
        <TextArea fx:id="orderTextArea" prefRowCount="5" wrapText="true"
                  style="-fx-border-color: #95a5a6; -fx-border-radius: 3; -fx-control-inner-background: #f8f9fa;"
                  VBox.vgrow="ALWAYS" />
    </VBox>
</VBox>